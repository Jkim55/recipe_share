.comment.clearfix
  .content
    %p
    %span= comment.content
    %span.small.comment_icon.glyphicon.glyphicon-cutlery
    %span.small.comment_detail Posted by #{comment.user.username} #{time_ago_in_words(comment.created_at)} ago
    - if user_signed_in? && comment.user_id  == current_user.id
      = link_to "Edit", edit_recipe_comment_path(comment.recipe, comment), class: "small"
      = link_to "Delete", [comment.recipe, comment], method: :delete, data: { confirm: "Are you sure?" }, class: "small"
