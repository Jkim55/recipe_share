.comment.clearfix
  .content
    %p
    %span.comment_content= comment.content
    %p
    %span.comment_author= comment.user.username
    %span.glyphicon.glyphicon-cutlery
    %span #{time_ago_in_words(comment.created_at)} ago
    - if user_signed_in? && comment.user_id  == current_user.id
      = link_to "Edit", edit_recipe_comment_path(comment.recipe, comment)
      = link_to "Delete", [comment.recipe, comment], method: :delete, data: { confirm: "Are you sure?" }
